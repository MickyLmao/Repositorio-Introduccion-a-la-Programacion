                    else
                    {
                        if (num1==num3)
                        {
                            Console.WriteLine("los 3 numeros son iguales");
                        }
                        else
                        {
                            Console.WriteLine("Numero 3 es mayor");
                        }
                    }
                }
                else
                {
                    if (num2>num3)
                    {
                        Console.WriteLine("El numero 2 es el mas grande");
                    }
                    else
                    {
                        if (num2==num3)
                        {
                            Console.WriteLine("numero 2 y 3 son los mas grandes");
                        }
                        else
                        {
                            Console.WriteLine("Numero 3 es el mayor");
                        }
                    }
                }
                    }


