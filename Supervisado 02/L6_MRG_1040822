                    else
                    {
                        Console.WriteLine("Numero 3 es mayor");
                    }
                }
            }
                else
                    {
                if (num2==num3)
                {
                    if (num1>num3)
                    {
                        Console.WriteLine("Numero 1 y 2 es mayor");
